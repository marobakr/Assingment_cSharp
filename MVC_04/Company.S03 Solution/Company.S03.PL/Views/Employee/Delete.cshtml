@model Company.S03.DAL.Models.Employee

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete Department </h2>
<form asp-action="Delete">
    <div class="form-group">
        <label asp-for="Name" class="col-form-label"></label>
        <input asp-for="Name" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="col-form-label"></label>
        <input asp-for="Address" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-form-label"></label>
        <input asp-for="Email" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-form-label"></label>
        <input asp-for="PhoneNumber" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Age" class="col-form-label"></label>
        <input asp-for="Age" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="Salary" class="col-form-label"></label>
        <input asp-for="Salary" class="form-control" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="IsActive" class="form-check"></label>
        <input asp-for="IsActive" class="form-check" readonly/>
    </div>
    <div class="form-group">
        <label asp-for="HiringDate" class="col-form-label"></label>
        <input asp-for="HiringDate" type="date" class="form-control" readonly/>
    </div>
    <input type="submit" value="Delete" class="btn btn-danger mt-3"/>
    <a asp-controller="Employee" asp-action="Index" class="btn btn-light">Back To List</a>
</form>